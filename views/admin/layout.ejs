                    <!-- Replace with sidebar content -->
                    <div class="sidebar">
                        <h3>Sidebar</h3>
                        <ul>
                            <li><a href="#">Recent Posts</a></li>
                            <li><a href="#">Categories</a></li>
                        </ul>
                    </div>
                </aside>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <!-- Replace this with your footer content -->
        <p>&copy; 2025 My Blog. All rights reserved.</p>
    </footer>

</body>
