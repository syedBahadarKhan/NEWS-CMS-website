

<!-- MAIN CONTENT -->
<div id="admin-content">
    <div class="container">
        <div class="row">

            <div class="col-md-12">
                <h1 class="admin-heading">Update Article</h1>
            </div>

            <div class="col-md-offset-3 col-md-6">
                <!-- UPDATE FORM -->
                <form action="#" method="post" enctype="multipart/form-data" autocomplete="off">

                    <input type="hidden" class="form-control" value="1">

                    <div class="form-group">
                        <label for="post_title">Title</label>
                        <input
                            type="text"
                            id="post_title"
                            class="form-control"
                            value="Lorem ipsum dolor sit amet"
                            required
                        >
                    </div>

                    <div class="form-group">
                        <label for="post_desc">Description</label>
                        <textarea
                            id="post_desc"
                            class="form-control"
                            rows="5"
                            required
                        >Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation</textarea>
                    </div>

                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" class="form-control" required>
                            <option>HTML</option>
                            <option>CSS</option>
                            <option>JavaScript</option>
                            <option>Python</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Post Image</label>
                        <input type="file" class="form-control">
                        <br>
                        <img src="upload/post_1.jpg" height="150" alt="Post Image">
                    </div>

                    <input type="submit" class="btn btn-primary" value="Update">

                </form>
                <!-- /UPDATE FORM -->
            </div>

        </div>
    </div>
</div>

